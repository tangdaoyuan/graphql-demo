{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "ESNext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["./src/**/*.ts"]
}
